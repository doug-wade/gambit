{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "lib": ["es2021", "dom"],
        "module": "es2022",
        "target": "es2021",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": ["src/**/*"],
    "module": "es2022"
}
