{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "baseUrl": ".",
        "lib": ["es2021", "dom"],
        "module": "node16",
        "target": "es2021",
        "outDir": "dist/types",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "nodenext",
        "emitDeclarationOnly": true,
        "declaration": true
    },
    "include": ["src/**/*"]
}
