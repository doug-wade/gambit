{
    "compilerOptions": {
       "target": "es2021",
       "module": "commonjs",
       "sourceMap": false,
       "outDir": "dist",
       "esModuleInterop": true,
       "moduleResolution": "node",
       "forceConsistentCasingInFileNames": true,
       "strict": true,
       "noUnusedLocals": true,
       "skipLibCheck": true,
       "types": [
           "node"
       ],
       "declaration": true,
       "emitDeclarationOnly": true
    },
    "include": [
        "src/**/*"
    ],
 }
