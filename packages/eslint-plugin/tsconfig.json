{
    "compilerOptions": {
        "target": "es2022",
        "module": "nodenext",
        "sourceMap": false,
        "outDir": "dist",
        "moduleResolution": "nodenext",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "types": ["node"],
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": ["src/**/*"]
}
