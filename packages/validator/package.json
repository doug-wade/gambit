{
    "name": "@tybalt/validator",
    "version": "0.0.1",
    "description": "A library for performing asynchronous validations",
    "main": "dist/index.js",
    "scripts": {
        "build": "yarn run compile && yarn run generate-types",
        "clean": "rimraf coverage/ dist/",
        "compile": "esbuild src/index.ts --bundle --format=cjs --outfile=dist/index.js",
        "debug": "yarn node --inspect-brk $(yarn bin jest) --runInBand",
        "generate-types": "tsc",
        "test": "jest --coverage",
        "watch": "esbuild src/index.ts --bundle --format=cjs --outfile=dist/index.js --watch"
    },
    "keywords": [
        "tybalt"
    ],
    "author": "Douglas Wade <douglas.b.wade@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "esbuild": "^0.16.4",
        "jest": "^29.3.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.9.4"
    },
    "files": [
        "dist/*",
        "package.json",
        "README.md"
    ]
}
