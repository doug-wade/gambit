{
    "name": "@tybalt/cli",
    "version": "0.1.4",
    "description": "A command-line application for getting started with tybalt web components",
    "bin": {
        "tybalt": "dist/index.js"
    },
    "scripts": {
        "build": "yarn run compile && yarn run generate-types",
        "ci-test": "jest --coverage",
        "clean": "rimraf dist/",
        "compile": "esbuild src/**/!(*.d).ts --format=esm --outdir=dist",
        "generate-types": "tsc",
        "watch": "esbuild src/**/!(*.d).ts --format=esm --outdir=dist --watch",
        "cli": "node dist/index.js",
        "test": "jest"
    },
    "type": "module",
    "keywords": [
        "tybalt",
        "web components"
    ],
    "author": "Douglas Wade <douglas.b.wade@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "@chialab/esbuild-plugin-html": "^0.17.2",
        "@swc/core": "^1.3.100",
        "@tybalt/esbuild-plugin": "workspace:^",
        "@tybalt/eslint-plugin": "workspace:^",
        "@types/glob": "^8.0.1",
        "browser-sync": "^3.0.2",
        "chalk": "^5.2.0",
        "commander": "^11.0.0",
        "esbuild": "^0.19.10",
        "eslint": "^8.56.0",
        "find-up": "^6.3.0",
        "glob": "^10.3.10",
        "import-meta-resolve": "^4.0.0",
        "jest-environment-jsdom": "^29.7.0",
        "js-convert-case": "^4.2.0",
        "mkdirp": "^3.0.1",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.0.5",
        "typescript": "^5.3.3"
    },
    "devDependencies": {
        "@types/browser-sync": "^2.27.1",
        "@types/mkdirp": "^2.0.0",
        "@types/node": "^20.10.5",
        "jest": "^29.7.0",
        "ts-node": "^10.9.2"
    },
    "files": [
        "dist/**/*",
        "config/**/*",
        "package.json",
        "README.md"
    ],
    "bugs": {
        "url": "https://github.com/doug-wade/tybalt/issues?q=is%3Aissue+is%3Aopen+label%3Acli"
    },
    "homepage": "https://tybalt.org/pages/cli",
    "repository": {
        "type": "git",
        "url": "https://github.com/doug-wade/tybalt.git",
        "directory": "packages/cli"
    }
}
